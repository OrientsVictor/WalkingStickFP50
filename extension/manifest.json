/* 
Manifest file for the Chrome Extension.
This is WalkingStick.
Final Project for CS50x by Sourjya Sarkar.
*/


{
    "manifest_version": 2,
    "name": "WalkingStick",
    "description": "This is the companion extension for the WalkingStick web app. This duo will help people with disability to navigate the web.",
    "version": "1.0",

    "chrome_url_overrides": {
        "newtab": "Ntab.html"
    },
    
    "content_scripts": [
        {
            "matches": ["https://*.bbc.com/*"],
            "js": ["scripts/news.js"]
        },
        {
            "matches": ["https://*.merriam-webster.com/*"],
            "js": ["scripts/define.js"]
        }
    ],

    "background": {
        "scripts": ["scripts/background.js"]
    },

    "browser_action": {
        "default_icon": "images/icon128.png"
    }
}